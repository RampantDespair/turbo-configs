{
  "$schema": "https://json.schemastore.org/package.json",
  "name": "@repo/configs",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "workspaces": [
    "eslint",
    "jest",
    "postcss",
    "prettier",
    "stylelint",
    "tailwind",
    "tsup",
    "typescript",
    "webpack"
  ],
  "scripts": {
    "check": "npm-check-updates -u && npm install",
    "types": "turbo run types",
    "update": "tsx update"
  },
  "devDependencies": {
    "@repo/config-eslint": "*",
    "@repo/config-jest": "*",
    "@repo/config-postcss": "*",
    "@repo/config-prettier": "*",
    "@repo/config-stylelint": "*",
    "@repo/config-tailwind": "*",
    "@repo/config-tsup": "*",
    "@repo/config-typescript": "*",
    "@repo/config-webpack": "*",
    "npm-check-updates": "^17.1.14",
    "turbo": "^2.4.1"
  },
  "packageManager": "npm@11.1.0",
  "publishConfig": {
    "access": "public"
  }
}
